<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#173E84">

    <LinearLayout
        android:id="@+id/category_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_footer"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/search_blue" />


        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/mtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_footer"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Sample title"
            android:textAlignment="center"
            android:textColor="#FFF"
            app:font="robotoregular.ttf"
            android:textSize="13dp" />

    </LinearLayout>

</RelativeLayout>