<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">



    <!--Header-->
    <RelativeLayout
        android:id="@+id/header_search_list"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/titlebar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/funding_back"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/back_arrow" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply Funding"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:id="@+id/title_saved_cars"
                app:font="sanz.ttf"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/plus"
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:textSize="50dp"
                android:textColor="#FFF"
                android:layout_marginRight="20dp"
                app:font="sanz.ttf"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/funding_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_search_list"
        android:divider="#fff"
        android:dividerHeight="8dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_funding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>