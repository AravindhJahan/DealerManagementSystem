<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        card_view:cardElevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/image1" />


            <LinearLayout
                android:id="@+id/cartitlelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_image"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <!--Car Name-->
                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ferrari - ZR 65 DX"
                    android:textColor="#000"
                    android:textSize="18dp"
                    app:font="robotoregular.ttf" />


            </LinearLayout>

            <!--Car Rate-->
            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/car_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cartitlelayout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="40,000,000"
                android:textSize="18dp"
                app:font="robotoregular.ttf" />

            <!--Car Details-->
            <LinearLayout
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/car_rate"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/car_kms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_rate"
                    android:text="2000 kms"
                    android:textSize="12dp"
                    app:font="robotoregular.ttf" />

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/car_liquid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Petrol"
                    android:textSize="12dp"
                    app:font="robotoregular.ttf" />

                <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                    android:id="@+id/car_model_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="2015"
                    android:textSize="12dp"
                    app:font="robotoregular.ttf" />

            </LinearLayout>

            <!--Address-->
            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/car_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="2nd cross street, Adayar, Chennai, India"
                android:textSize="12dp"
                app:font="robotoregular.ttf" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>