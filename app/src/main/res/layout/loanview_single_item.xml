<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
        android:id="@+id/loan_apply_owner_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loan_apply_profile"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Customer Name"
        android:textSize="16dp"
        android:textStyle="bold"
        app:font="sanz.ttf" />

    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
        android:id="@+id/loan_apply_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Jxxxxxxxxxxx"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        app:font="sanz.ttf" />



</RelativeLayout>