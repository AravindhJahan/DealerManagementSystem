<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/category_item"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="#173E84"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image_footer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/search_blue" />


        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/mtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_footer"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:text="Sample title"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textColor="#C0C0C0"
            android:textSize="15dp"
            app:font="robotoregular.ttf" />


    </LinearLayout>

</LinearLayout>