<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro"
    tools:context="com.falconnect.dealermanagementsystem.MainActivity">


    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
        android:id="@+id/dealerplus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:text="DEALER PLUS"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:font="robotoregular.ttf" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:src="@drawable/splashlogo" />

    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
        android:id="@+id/mycar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="My Car"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:font="robotoregular.ttf" />

    <View
        android:id="@+id/view"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_below="@+id/mycar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="3dp"
        android:background="#FA2608" />

    <RelativeLayout
        android:id="@+id/details_layout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mycar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp">

        <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
            android:textSize="13dp"
            app:font="robotoregular.ttf" />

    </RelativeLayout>

    <Button
        android:id="@+id/enter_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sigin_up_intro"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sigin_up_intro"
        android:layout_marginBottom="44dp"
        android:background="@drawable/shape"
        android:fontFamily="robotoregular.ttf"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="18dp" />

    <Button
        android:id="@+id/sigin_up_intro"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enter_btn"
        android:layout_alignLeft="@+id/details_layout"
        android:layout_alignStart="@+id/details_layout"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_signup_intro"
        android:fontFamily="robotoregular.ttf"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#38B2E7"
        android:textSize="18dp" />


</RelativeLayout>
