<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <!--Header-->
    <RelativeLayout
        android:id="@+id/header_search_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/titlebar">

            <ImageView
                android:id="@+id/close_icon"
                android:layout_width="25dp"
                android:layout_height="55dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/close" />

            <ImageView
                android:id="@+id/apply_icon"
                android:layout_width="25dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/close" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Sites"
                android:textColor="#FFF"
                android:textSize="18dp"
                app:font="sanz.ttf"
                android:id="@+id/customTextView2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/sitelistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:choiceMode="multipleChoice"
        android:layout_below="@+id/btn_value_get"
        android:layout_marginTop="5dp" />

</LinearLayout>

