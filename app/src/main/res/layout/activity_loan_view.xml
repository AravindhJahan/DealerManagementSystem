<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">


    <!--Header-->
    <LinearLayout
        android:id="@+id/header_search_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/titlebar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/loan_view_back_btn"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/back_arrow" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/title_saved_cars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="Apply Loan"
                android:textColor="#FFF"
                android:textSize="18dp"
                app:font="sanz.ttf" />

        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_search_list">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Body1-->
            <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_search_list"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/loan_apply_profile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignTop="@+id/chola_image"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/circle"
                        android:src="@drawable/default_avatar" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_apply_owner_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loan_apply_profile"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Customer Name"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_apply_token_num_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loan_apply_owner_name_text"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Token ID"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_apply_amount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loan_apply_token_num_text"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Amount"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:font="sanz.ttf" />


                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_apply_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/loan_apply_email"
                        android:layout_below="@+id/loan_apply_token_num"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/loan_apply_amount_text"
                        android:text="10000"
                        android:textSize="16dp"
                        app:font="sanz.ttf" />


                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_apply_email_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loan_apply_amount_text"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Email ID"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_apply_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/loan_apply_amount_text"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:text="john@gmail.com"
                        android:textSize="16dp"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_apply_token_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/loan_apply_token_num_text"
                        android:layout_alignBottom="@+id/loan_apply_token_num_text"
                        android:layout_alignLeft="@+id/loan_apply_email"
                        android:layout_alignStart="@+id/loan_apply_email"
                        android:gravity="right"
                        android:text="D00111111"
                        android:textSize="16dp"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_apply_owner_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/loan_apply_token_num"
                        android:layout_alignStart="@+id/loan_apply_token_num"
                        android:layout_below="@+id/loan_apply_profile"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:text="Johnsonxxxx"
                        android:textSize="16dp"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_apply_phone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loan_apply_email_text"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Phone Number"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_apply_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/loan_apply_email"
                        android:layout_alignParentRight="true"
                        android:layout_alignStart="@+id/loan_apply_email"
                        android:layout_below="@+id/loan_apply_email"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="123456789"
                        android:textSize="16dp"
                        app:font="sanz.ttf" />


                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_apply_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loan_apply_phone_text"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Date"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_apply_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/loan_apply_phone_text"
                        android:layout_alignParentRight="true"
                        android:layout_alignStart="@+id/loan_apply_phone"
                        android:layout_below="@+id/loan_apply_phone"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="25.01.2010"
                        android:textSize="16dp"
                        app:font="sanz.ttf" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!--Body2-->
            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_financier_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="FINANCIER"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/status_loan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="STATUS"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_chola_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loan_financier_text"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Cholamandalam Investment Corp Ltd"
                        android:textSize="10dp"
                        app:font="sanz.ttf" />

                    <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                        android:id="@+id/loan_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/loan_financier_text"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Completed"
                        android:textColor="#C0C0"
                        android:textSize="10dp"
                        app:font="sanz.ttf" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <com.falconnect.dealermanagementsystem.FontAdapter.ButtonPlus
                android:id="@+id/revoke_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="65dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_submit"
                android:text="Revoke"
                android:textColor="#FFF"
                android:textSize="15dp"
                app:font="sanz.ttf" />

        </LinearLayout>

    </ScrollView>


    <!--Footer-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/apply_loan_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars="none" />

</RelativeLayout>