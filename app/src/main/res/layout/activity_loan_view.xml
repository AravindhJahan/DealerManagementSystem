<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">


    <!--Header-->
    <LinearLayout
        android:id="@+id/header_search_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/titlebar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/loan_view_back_btn"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/back_arrow" />

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/title_saved_cars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="30dp"
                android:text="Apply Loan"
                android:textColor="#FFF"
                android:textSize="18dp"
                app:font="sanz.ttf" />

        </LinearLayout>

    </LinearLayout>

    <!--Body1-->
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_search_list"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/loan_apply_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/chola_image"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle"
                android:src="@drawable/default_avatar" />

            <ListView
                android:id="@+id/contact_details_loan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/loan_apply_profile"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!--Body2-->
    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_below="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/loan_financier_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="FINANCIER"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                app:font="sanz.ttf"/>

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/status_loan"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textColor="#000"
                android:text="STATUS"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                app:font="sanz.ttf"
                android:textStyle="bold"/>

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/loan_chola_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/loan_financier_text"
                android:text="Cholamandalam Investment Corp Ltd"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                app:font="sanz.ttf"/>

            <com.falconnect.dealermanagementsystem.FontAdapter.CustomTextView
                android:id="@+id/loan_status"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Completed"
                android:layout_below="@+id/loan_financier_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:textColor="#C0C0"
                android:layout_marginBottom="10dp"
                app:font="sanz.ttf"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!--Footer-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/apply_loan_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars="none" />

</RelativeLayout>